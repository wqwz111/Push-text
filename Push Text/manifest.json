{
  "manifest_version": 2,

  "name": "Push Text",
  "description": "This extension push selected text to other devices",
  "version": "1.0.1",
  "content_security_policy": "script-src 'self' https://*.firebaseio.com; object-src 'self'",

  "icons": {
    "128": "icon.png"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["core.js"],
      "run_at": "document_end"
    }
  ],
  "background": {
    "persistent": true,
    "scripts": [
      "lib/socket.io.slim.js",
      "lib/room.js",
      "background.js"
    ]
  },
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "permissions": [
    "tabs",
    "storage",
    "<all_urls>",
    "https://ajax.googleapis.com/"
  ]
}
